# ============================================================
# PASO 57: Variables de Entorno - NEURIAX Platform
# ============================================================
# 
# Copiar este archivo a .env y configurar los valores apropiados
# NUNCA subir el archivo .env a control de versiones
#

# ============================================================
# ENTORNO
# ============================================================
NODE_ENV=development
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# Valores: development, production, test

# ============================================================
# SERVIDOR
# ============================================================
PORT=3001
HOST=localhost

# ============================================================
# BASE DE DATOS POSTGRESQL (Solo producción)
# ============================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=begona_gomez_db
DB_USER=begona_admin
DB_PASSWORD=your_secure_password_here
DB_SSL=false
# DB_SSL=true para conexiones remotas o en la nube

# Pool de conexiones
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=5000

# ============================================================
# JWT Y SEGURIDAD
# ============================================================
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=10

# CORS
CORS_ORIGIN=http://localhost:3000
# Para múltiples orígenes: CORS_ORIGIN=http://localhost:3000,https://neuriax.com

# ============================================================
# FACTURACIÓN
# ============================================================
FACTURA_SERIE_DEFECTO=F
IVA_DEFECTO=21

# ============================================================
# EMAIL (SMTP)
# ============================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

EMAIL_FROM_NAME=NEURIAX Salon Manager
EMAIL_FROM_ADDRESS=noreply@neuriax.com

# ============================================================
# BACKUPS
# ============================================================
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_AUTO_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
# Cron: A las 3:00 AM todos los días

# ============================================================
# LOGS
# ============================================================
LOG_LEVEL=info
# Valores: error, warn, info, debug
LOG_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# ============================================================
# REDIS (Cache - Opcional)
# ============================================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ============================================================
# INTEGRACIÓN CONTABILIDAD (Opcional)
# ============================================================
# CONTABILIDAD_API_URL=https://api.contabilidad.com
# CONTABILIDAD_API_KEY=your_api_key

# ============================================================
# SSL/HTTPS (Solo producción)
# ============================================================
# SSL_ENABLED=true
# SSL_CERT_PATH=/etc/letsencrypt/live/neuriax.com/fullchain.pem
# SSL_KEY_PATH=/etc/letsencrypt/live/neuriax.com/privkey.pem

# ============================================================
# DOMINIO (Solo producción)
# ============================================================
# DOMAIN=neuriax.com
# API_URL=https://api.neuriax.com
# CLIENT_URL=https://app.neuriax.com
